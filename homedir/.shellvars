#!/bin/sh

# Set vim as default editor (vi is the default otherwise)
export EDITOR="vim"
bindkey -v

#########################################################################
# Tool paths
#########################################################################
export JAVA_HOME=$(/usr/libexec/java_home)
export GOPATH=/usr/local/bin

#########################################################################
# Tool settings
#########################################################################
export NVM_DIR=~/.nvm

# GPG
# export GPG_TTY=$(tty)
# if [ -f ~/.gnupg/.gpg-agent-info ] && [ -n "$(pgrep gpg-agent)" ]; then
#     source ~/.gnupg/.gpg-agent-info
#     export GPG_AGENT_INFO
# else
#     eval $(gpg-agent --daemon --write-env-file ~/.gnupg/.gpg-agent-info)
# fi

# virtualenvwrapper
export WORKON_HOME=~/.virtualenvs
export PROJECT_HOME=~/dev
source /usr/local/bin/virtualenvwrapper.sh

#########################################################################
# Dotfiles paths
#########################################################################
export DOTFILES="$HOME/dev/dotfiles"
export HOMEDIR="$DOTFILES/homedir"
source $HOMEDIR/.shellvars_private


# TODO: find out why/where these are getting exported
# unset these to allow multiple git users to be used on the same machine
# without these, it will be inherited from the local git config
unset GIT_AUTHOR_EMAIL
unset GIT_AUTHOR_NAME
