{
  "window.zoomLevel": 1.2,

  // Reduce clutter
  "editor.colorDecorators": false,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.hideCursorInOverviewRuler": true,
  "editor.lightbulb.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.overviewRulerBorder": false,
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "none",
  "editor.selectionHighlight": false,
  "explorer.openEditors.visible": 1,
  "git.decorations.enabled": false,
  "problems.decorations.enabled": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.tips.enabled": false,

  // Theming
  "workbench.colorTheme": "Catppuccin Frapp√©",

  // Typography
  "editor.fontFamily": "'Fira Code', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.suggestFontSize": 15,

  // (Diff-)Editor
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorSurroundingLines": 5,
  "editor.detectIndentation": false,
  "editor.emptySelectionClipboard": false,
  "editor.guides.indentation": true,
  "editor.rulers": [80, 120],
  "editor.suggestSelection": "first",
  "editor.suggest.localityBonus": true,
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",

  // Explorer
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.dart": "$(capture).g.dart",
    "*.dart.js": "$(capture).dart.js_*.part.js, $(capture).dart.js.deps",
    "pubspec.yaml": "analysis_options.yaml, build*.yaml, *build.yaml, dart_test.yaml, pubspec.lock",
    "*.ts": "$(capture).d.ts, $(capture).js, $(capture).js.map"
  },

  // Files/Search
  "files.associations": {
    ".php_cs": "php",
    ".php_cs.dist": "php",
    "*.envsh": "shellscript"
  },
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/*.pyc": true,
    "**/__pycache__": true,
    "**/.atom": true,
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.idea": true,
    "**/.project": true,
    "**/.pub": true,
    "**/.settings": true
  },
  "files.watcherExclude": {
    "**/.dart_tool/**": true,
    "**/build": true,
    "**/node_modules/**": true
  },
  "search.exclude": {
    "**/.dart_tool": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/doc/api": true,
    "**/node_modules": false,
    "**/package-lock.json": true,
    "**/pubspec.lock": true,
    "**/node_modules/**": true
  },

  // Git/SCM
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableCommitSigning": true,
  "git.mergeEditor": true,
  "scm.defaultViewMode": "tree",

  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.25,
  "terminal.integrated.scrollback": 100000,
  "application.shellEnvironmentResolutionTimeout": 20,

  // Window
  "window.clickThroughInactive": false,
  "window.nativeFullScreen": false,
  "window.newWindowDimensions": "inherit",
  "window.openFoldersInNewWindow": "on",

  // Workbench
  "workbench.editor.enablePreview": false,
  "workbench.editor.languageDetection": false,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.colorCustomizations": {
    "terminal.background": "#212529"
  },

  // ========= \\
  // LANGUAGES \\
  // ========= \\

  // C
  "[c]": {
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  // Dart
  "[dart]": {
    "editor.detectIndentation": false,
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
    "editor.tabSize": 2
  },
  "dart.analysisExcludedFolders": ["build/**"],
  "dart.analyzerDiagnosticsPort": 9999,
  "dart.checkForSdkUpdates": false,
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": true,
  "dart.runPubGetOnPubspecChanges": "never",
  "dart.sdkPath": "/Users/evanweible/.asdf_dart_sdk",

  // GHA
  "[github-actions-workflow]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // Golang
  "go.formatTool": "goimports",

  // HTML
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // Javascript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.tabSize": 2
  },

  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },

  // Python
  "[py]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "python.defaultInterpreterPath": "python3",
  "python.venvPath": "~/.pyenv",

  // Svelte
  "[svelte]": {
    "editor.tabSize": 2
  },

  // Typescript
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },

  // YAML
  "[yaml]": {
    "editor.tabSize": 2
  },
  "yaml.schemas": {
    "https://app.wdesk.com/fews/v1/schema/bundle-manifest.json": [
      "web/manifest.yaml"
    ],
    "https://json.schemastore.org/dart-build": [
      "build.yaml",
      "*.build.yaml",
      "build.*.yaml"
    ],
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflow/*.yaml"
    ],
    "https://raw.githubusercontent.com/argoproj/argo-workflows/master/api/jsonschema/schema.json": "helm/cid-workflows/**/*.yaml"
  },

  // ======= \\
  // PLUGINS \\
  // ======= \\

  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.preferredAccount": "evanweible-wf",

  "github.gitProtocol": "ssh",

  "githubPullRequests.pullBranch": "never",

  "overReact.formatOnSave.scanForNestedProjects": true,
  "overReact.formatOnSave.showOutputOnError": false,

  "plantuml.render": "PlantUMLServer",
  "plantuml.server": "http://localhost:3124",

  "vscode-home-assistant.hostUrl": "http://homeassistant.local:8123",
  "vscode-home-assistant.ignoreCertificates": true,
  "vscode-home-assistant.longLivedAccessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiIxYzY2MDJkZTFhOWU0OThjYTk2ZGEwZjBkMWNhMTU4NiIsImlhdCI6MTY3MjI2NzkwNCwiZXhwIjoxOTg3NjI3OTA0fQ.RIqRkCAO_CcPJt4wofSjBYDrP-Z5FP242OOLKFIre-I",
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": false,
  "totalTypeScript.hiddenTips": [
    "typing-function-parameters",
    "basic-types",
    "passing-generics-to-types",
    "typeof",
    "type-alias-declaration",
    "variable-type-annotation",
    "bigint",
    "ts-object-type",
    "optional-object-property",
    "interface-declaration",
    "array-type"
  ],
  "windsurf.autocompleteSpeed": "fast",
  "windsurf.autoExecutionPolicy": "off",
  "windsurf.chatFontSize": "default",
  "windsurf.rememberLastModelSelection": true,
  "windsurf.explainAndFixInCurrentConversation": true
}
