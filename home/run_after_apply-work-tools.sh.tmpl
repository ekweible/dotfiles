#!/bin/bash
{{ if eq .profile "work" -}}
# Apply work-private dotfiles if they exist
if [ -d ~/.local/share/chezmoi-work ]; then
    echo "üîê Applying work-private dotfiles..."

    # Use full path to chezmoi since it might not be in PATH yet
    if command -v chezmoi &> /dev/null; then
        chezmoi apply --source-path=~/.local/share/chezmoi-work
    elif [ -x /opt/homebrew/bin/chezmoi ]; then
        /opt/homebrew/bin/chezmoi apply --source-path=~/.local/share/chezmoi-work
    elif [ -x /usr/local/bin/chezmoi ]; then
        /usr/local/bin/chezmoi apply --source-path=~/.local/share/chezmoi-work
    else
        echo "‚ö†Ô∏è  chezmoi not found in PATH or standard locations"
        echo "   Skipping work-private dotfiles - run 'chezmoi apply --source-path=~/.local/share/chezmoi-work' manually"
    fi
fi
{{- end }}
