#!/bin/bash
{{ if eq .profile "work" -}}
# Apply work-private dotfiles if they exist
if [ -d ~/.local/share/chezmoi-work ]; then
    echo "üîê Applying work-private dotfiles..."

    # Use the same chezmoi executable that's currently running
    CHEZMOI="{{ .chezmoi.executable }}"

    if [ -x "${CHEZMOI}" ]; then
        "${CHEZMOI}" apply --source-path=~/.local/share/chezmoi-work
    else
        echo "‚ö†Ô∏è  chezmoi executable not found at ${CHEZMOI}"
        echo "   Skipping work-private dotfiles - run 'chezmoi apply --source-path=~/.local/share/chezmoi-work' manually"
    fi
fi
{{- end }}
