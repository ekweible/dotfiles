{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "cd": "allow",
      "cat": "allow",
      "echo": "allow",
      "grep": "allow",
      "find": "allow",
      "head": "allow",
      "tail": "allow",
      "ls": "allow",
      "man": "allow",
      "mkdir": "allow",
      "cp": "allow",
      "pwd": "allow",
      "git status": "allow",
      "git diff": "allow",
      "pnpm": "allow"
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    }
  }
}
