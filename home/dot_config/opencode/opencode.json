{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "cat *": "allow",
      "cat *.env": "deny",
      "cat *.env.*": "deny",
      "cat *.env.example": "allow",
      "cd *": "allow",
      "cp *": "allow",
      "echo": "allow",
      "find *": "ask",
      "git status *": "allow",
      "git diff *": "allow",
      "git commit *": "allow",
      "git add *": "allow",
      "git push *": "ask",
      "git pull *": "allow",
      "git fetch *": "allow",
      "git merge *": "allow",
      "git rebase *": "allow",
      "git reset *": "allow",
      "git checkout *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "man *": "allow",
      "mkdir *": "allow",
      "pwd": "allow",
      "tail *": "allow"
    }
  },
  "mcp": {
    "playwriter": {
      "type": "local",
      "command": ["pnpm", "dlx", "playwriter@latest"],
      "environment": {
        "PLAYWRITER_AUTO_ENABLE": "1"
      },
      "enabled": true
    }
  }
}
