# === Aliases ===
# Consolidated from all modules for easier management

# Load common aliases (already loaded via .zshenv for non-interactive shells)
# We source it here too so all aliases are available in interactive shells
if [[ -f ~/.config/zsh/noninteractive-aliases.zsh ]]; then
  source ~/.config/zsh/noninteractive-aliases.zsh
fi

# === dart ===
alias ddev='dart run dart_dev'
alias pbr='dart run build_runner'
alias pubg='dart pub get --no-precompile'
alias pubu='dart pub upgrade --no-precompile'
alias dv='dart run dependency_validator'
alias repub='pubclean; pubg'
alias pubclean='rm -rf .dart_tool/ && echo "Removed .dart_tool/"; rm .packages && echo "Removed .packages"; pubcleanlock'
alias pubcleanlock='git ls-files pubspec.lock --error-unmatch &>/dev/null && echo "Not removing pubspec.lock - it is tracked" || (rm pubspec.lock && echo "Removed pubspec.lock")'
alias ldart="$LOCAL_DART_SDK_BIN/dart"
alias lpub="$LOCAL_DART_SDK_BIN/pub"

# === plantuml ===
alias plantuml="docker run -v $(pwd)/doc/design/:/assets plantuml"
alias plantuml-server="docker run -d -p 3124:8080 plantuml/plantuml-server:jetty"

